---
import "../styles/Layout/LayoutFotter/StyleSheet.css";
// src/components/Footer.astro

interface SocialLink {
  href: string;
  label: string;
  svgPath: string;
}

interface NavLink {
  label: string;
  href: string;
}

interface FooterSection {
  title: string;
  titleHref?: string;
  description?: string;
  links?: NavLink[];
  contactEmail?: string; // changed to string
  phone?: string; // changed to string
  addresses?: { href: string; text: string }[];
  socialLinks?: SocialLink[];
}

interface Props {
  brandName: string;
  brandHref: string;
  brandDescription: string;
  serviceSection: FooterSection;
  contactSection: FooterSection;
  copyrightText: string;
}

const {
  brandName,
  brandHref,
  brandDescription,
  serviceSection,
  contactSection,
  copyrightText,
} = Astro.props;
---

<footer class="footer">
  <div class="footer-container">
    <div class="footer-content">
      <div class="footer-section">
        <h3><a href={brandHref}>{brandName}</a></h3>
        <p>{brandDescription}</p>
      </div>

      <div class="footer-section">
        <h4>
          <a href={serviceSection.titleHref ?? "#"}>
            {serviceSection.title}
          </a>
        </h4>
        {
          serviceSection.links && (
            <ul>
              {serviceSection.links.map((link) => (
                <li>
                  <a href={link.href}>{link.label}</a>
                </li>
              ))}
            </ul>
          )
        }
      </div>

      <div class="footer-section">
        <h4>
          <a href={contactSection.titleHref ?? "#"}>
            {contactSection.title}
          </a>
        </h4>

        {
          contactSection.contactEmail && (
            <p>
              <a href={`mailto:${contactSection.contactEmail}`}>
                {contactSection.contactEmail}
              </a>
            </p>
          )
        }

        {contactSection.phone && <p>{contactSection.phone}</p>}

        {
          contactSection.addresses &&
            contactSection.addresses.map((addr) => (
              <p>
                <a
                  href={addr.href}
                  style="color: white; text-decoration: none;"
                >
                  {addr.text}
                </a>
              </p>
            ))
        }

        {
          contactSection.socialLinks && (
            <div class="footer-section social-media">
              <div class="social-icons">
                {contactSection.socialLinks.map((social) => (
                  <a
                    href={social.href}
                    target="_blank"
                    aria-label={social.label}
                    rel="noopener noreferrer"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                      width="24"
                      height="24"
                    >
                      <path d={social.svgPath} />
                    </svg>
                  </a>
                ))}
              </div>
            </div>
          )
        }
      </div>
    </div>

    <div class="footer-bottom">
      <p>{copyrightText}</p>
    </div>
  </div>
</footer>
