---
import Header from "./Header.astro";
import Footer from "./Footer.astro";
export interface Props {
  title: string;
}
export const phone = "+90 123 456 7890";
export const email = "info@example.com";
const { title } = Astro.props;

const navItems = [
  { label: "Ana Sayfa", href: "/" },
  { label: "Haberler", href: "/News" },
  {
    label: "Hizmetler",
    href: "/Services",
    submenu: [
      { label: "Araç Takip", href: "/VehicleTrackingSystem" },
      { label: "Filo Yönetimi", href: "/FleetManagement" },
      { label: "PDKS Sistemleri", href: "/PDKS" },
      { label: "Kokpit", href: "/Kokpit" },
      { label: "SDS", href: "/SDS" },
      { label: "Yakıt Yönetimi", href: "/FuelManagement" },
      { label: "Personel ve IK", href: "/PersonelSystem" },
    ],
  },
  { label: "Özellikler", href: "/Features" },
  { label: "İletişim", href: "/Contact" },
];

const externalLinks = [
  { label: "Kokpit Giriş", href: "https://kokpit.tnbmobil.com.tr" },
  { label: "TNB Filo Giriş", href: "https://ats.tnbmobil.com.tr" },
];

const facebookPath =
  "M22 12a10 10 0 1 0-11.6 9.8v-6.9h-2.5v-2.9h2.5V9.4c0-2.5 1.5-3.9 3.8-3.9 1.1 0 2.3.2 2.3.2v2.5h-1.3c-1.3 0-1.7.8-1.7 1.6v1.9h2.9l-.5 2.9h-2.4v6.9A10 10 0 0 0 22 12z";
const linkedinPath =
  "M20.45 20.45h-3.6v-5.45c0-1.3-.02-3-1.82-3-1.82 0-2.1 1.42-2.1 2.9v5.55h-3.6V9h3.46v1.56h.05a3.8 3.8 0 0 1 3.42-1.88c3.66 0 4.34 2.4 4.34 5.5v6.82zM5.34 7.43a2.1 2.1 0 1 1 0-4.2 2.1 2.1 0 0 1 0 4.2zM7.14 20.45H3.52V9h3.62v11.45zM22.23 0H1.77C.8 0 0 .77 0 1.72v20.56C0 23.23.8 24 1.77 24h20.46c.97 0 1.77-.77 1.77-1.72V1.72c0-.95-.8-1.72-1.77-1.72z";
const instagramPath =
  "M7.75 2h8.5A5.75 5.75 0 0 1 22 7.75v8.5A5.75 5.75 0 0 1 16.25 22h-8.5A5.75 5.75 0 0 1 2 16.25v-8.5A5.75 5.75 0 0 1 7.75 2zm0 1.5A4.25 4.25 0 0 0 3.5 7.75v8.5A4.25 4.25 0 0 0 7.75 20.5h8.5a4.25 4.25 0 0 0 4.25-4.25v-8.5A4.25 4.25 0 0 0 16.25 3.5h-8.5zm8.44 2.44a1.06 1.06 0 1 1 0 2.12 1.06 1.06 0 0 1 0-2.12zM12 7a5 5 0 1 1 0 10 5 5 0 0 1 0-10zm0 1.5a3.5 3.5 0 1 0 0 7 3.5 3.5 0 0 0 0-7z";

const serviceSection = {
  title: "Hizmetlerimiz",
  titleHref: "/Services",
  links: [
    { label: "Araç Takip Sistemi", href: "/VehicleTrackingSystem" },
    { label: "Filo Yönetimi", href: "/FleetManagement" },
    { label: "PDKS Sistemleri", href: "/PDKS" },
    { label: "Personel ve Insan Kaynakları", href: "/PersonelSystem" },
    { label: "Yakıt Yönetimi", href: "/FuelManagement" },
  ],
};

const contactSection = {
  title: "İletişim",
  titleHref: "/Contact",
  contactEmail: email, // pass string directly
  phone: phone, // pass string directly
  addresses: [
    {
      href: "https://www.google.com/maps?q=Adalet,+Manas+Blv.+Yanyolu+No:47,+35530+Bayraklı/İzmir",
      text: "Adalet, Manas Blv. Yanyolu No:47, 35530 Bayraklı/İzmir",
    },
  ],
  socialLinks: [
    {
      href: "https://facebook.com/tnbmobil",
      label: "Facebook",
      svgPath: facebookPath,
    },
    {
      href: "https://www.linkedin.com/company/tnb-mobil-z-mler-a-/",
      label: "LinkedIn",
      svgPath: linkedinPath,
    },
    {
      href: "https://www.instagram.com/tnb_mobilcozumler?igsh=MTVleXI1N2dhbTlmdw==",
      label: "Instagram",
      svgPath: instagramPath,
    },
  ],
};
---

<!doctype html>
<html lang="tr">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="TNB Mobil - Dijital Dönüşüm ve Kurumsal Yönetim Çözümleri. Araç takip, filo yönetimi, PDKS ve mobil uygulamalar."
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Inter", sans-serif;
        line-height: 1.6;
        color: #333;
      }
    </style>
  </head>

  <body>
    <Header
      logoSrc="../1024x1024.jpg"
      logoAlt="TNB LOGO"
      brandName="TNB Mobil"
      navItems={navItems}
      externalLinks={externalLinks}
    />
    <main>
      <slot />
    </main>
    <Footer
      brandName="TNB Mobil"
      brandHref="/"
      brandDescription="Dijital dönüşüm ve kurumsal yönetim çözümlerinde lider. Teknoloji ile işlerinizi kolaylaştırıyoruz."
      serviceSection={serviceSection}
      contactSection={contactSection}
      copyrightText="© 2025 TNB Mobil. Tüm hakları saklıdır."
    />
  </body>
</html>
