  "M7.75 2h8.5A5.75 5.75 0 0 1 22 7.75v8.5A5.75 5.75 0 0 1 16.25 22h-8.5A5.75 5.75 0 0 1 2 16.25v-8.5A5.75 5.75 0 0 1 7.75 2zm0 1.5A4.25 4.25 0 0 0 3.5 7.75v8.5A4.25 4.25 0 0 0 7.75 20.5h8.5a4.25 4.25 0 0 0 4.25-4.25v-8.5A4.25 4.25 0 0 0 16.25 3.5h-8.5zm8.44 2.44a1.06 1.06 0 1 1 0 2.12 1.06 1.06 0 0 1 0-2.12zM12 7a5 5 0 1 1 0 10 5 5 0 0 1 0-10zm0 1.5a3.5 3.5 0 1 0 0 7 3.5 3.5 0 0 0 0-7z";

const serviceSection = {
  title: "Our Services",
  titleHref: "/services",
  links: [
    { label: "Web Development", href: "/web-development" },
    { label: "Mobile Applications", href: "/mobile-apps" },
    { label: "UI/UX Design", href: "/ui-ux" },
    { label: "Cloud Solutions", href: "/cloud" },
    { label: "Digital Marketing", href: "/marketing" },
  ],
};

const contactSection = {
  title: "Contact Us",
  titleHref: "/contact",
  contactEmail: email,
  phone: phone,
  addresses: [
    {
      href: "https://www.google.com/maps?q=123+Main+Street,+City,+Country",
      text: "123 Main Street, City, Country",
    },
  ],
  socialLinks: [
    {
      href: "https://facebook.com/newwebsite",
      label: "Facebook",
      svgPath: facebookPath,
    },
    {
      href: "https://www.linkedin.com/company/newwebsite",
      label: "LinkedIn",
      svgPath: linkedinPath,
    },
    {
      href: "https://www.instagram.com/newwebsite",
      label: "Instagram",
      svgPath: instagramPath,
    },
  ],
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="YourCompany - Innovative Solutions for Digital Transformation and Business Management. Web development, mobile apps, cloud solutions, and more."
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="icon"
      type="image/png"
      href="creative-logo-design-for-real-estate-company-vector.jpg"
    />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link
      href="creative-logo-design-for-real-estate-company-vector.jpg"
      type="image/png"
      rel="stylesheet"
    />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Inter", sans-serif;
        line-height: 1.6;
        color: #333;
      }
    </style>
  </head>

  <body>
    <Header
      logoSrc="creative-logo-design-for-real-estate-company-vector.jpg"
      logoAlt="YourCompany Logo"
      brandName="YourCompany"
      navItems={navItems}
      externalLinks={externalLinks}
    />
    <main>
      <slot />
    </main>
    <Footer
      brandName="YourCompany"
      brandHref="/"
      brandDescription="Innovative digital solutions for your business. We make technology work for you."
      serviceSection={serviceSection}
      contactSection={contactSection}
      copyrightText="Â© 2025 YourCompany. All rights reserved."
    />
  </body>
</html>
