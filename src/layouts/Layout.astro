---
import Header from "./Header.astro";
import Footer from "./Footer.astro";

export interface Props {
  title: string;
}

export const phone = "+1 555 123 4567";
export const email = "info@newwebsite.com";
const { title } = Astro.props;

const navItems = [
  { label: "Home", href: "/" },
  { label: "News", href: "/News" },
  {
    label: "Services",
    href: "/Services",
    submenu: [
      { label: "Web Development", href: "/Development" },
      { label: "Mobile Apps", href: "/Mobile Apps" },
      { label: "UI/UX Design", href: "/UIDesign" },
      { label: "Cloud Solutions", href: "/CloudSolutions" },
      { label: "Marketing", href: "/Marketing" },
      { label: "SEO Optimization", href: "/SEOOptimization" },
      { label: "Technical Support", href: "/TechnicalSupport" },
    ],
  },
  { label: "Features", href: "/Features" },
  { label: "Contact", href: "/Contact" },
];

const externalLinks = [
  { label: "Client Portal", href: "https://www.google.com/" },
  { label: "Dashboard", href: "https://www.google.com/" },
];

const facebookPath =
  "M22 12a10 10 0 1 0-11.6 9.8v-6.9h-2.5v-2.9h2.5V9.4c0-2.5 1.5-3.9 3.8-3.9 1.1 0 2.3.2 2.3.2v2.5h-1.3c-1.3 0-1.7.8-1.7 1.6v1.9h2.9l-.5 2.9h-2.4v6.9A10 10 0 0 0 22 12z";
