---
// src/components/DashboardCard.astro

// Define the Feature type
type Feature = {
  icon: string;
  text: string;
};

// Define the component props
interface Props {
  title: string;
  icon: string;
  description: string;
  features: Feature[];
  href: string;
}

// Destructure with TypeScript typing
const { title, icon, description, features, href } = Astro.props as Props;
---

<a href={href} class="dashboard-card">
  <div class="card-header">
    <div class="card-icon">{icon}</div>
    <h2 class="card-title">{title}</h2>
  </div>
  <div class="card-body">
    <p class="card-description">{description}</p>
    <ul class="feature-list">
      {
        features.map((feature: Feature) => (
          <li class="feature-item">
            <span class="feature-icon">{feature.icon}</span>
            <span>{feature.text}</span>
          </li>
        ))
      }
    </ul>
  </div>
</a>

<style>
  .dashboard-card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
    border: 1px solid rgba(0, 0, 0, 0.1);
    display: block;
    color: inherit;
    text-decoration: none;
  }

  .dashboard-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 25px rgba(0, 0, 0, 0.1);
    background: rgba(255, 255, 255, 0.95);
  }

  .card-header {
    padding: 20px;
    background: linear-gradient(135deg, var(--primary), var(--primary-light));
    color: white;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .card-icon {
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
  }

  .card-title {
    font-size: 1.4rem;
    font-weight: 700;
  }

  .card-body {
    padding: 20px;
  }

  .card-description {
    margin-bottom: 20px;
    color: var(--gray);
  }

  .feature-list {
    list-style: none;
  }

  .feature-item {
    display: flex;
    align-items: flex-start;
    gap: 10px;
    margin-bottom: 12px;
    padding-bottom: 12px;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  }

  .feature-item:last-child {
    margin-bottom: 0;
    padding-bottom: 0;
    border-bottom: none;
  }

  .feature-icon {
    color: var(--primary);
    font-size: 1.1rem;
    margin-top: 2px;
  }
</style>
