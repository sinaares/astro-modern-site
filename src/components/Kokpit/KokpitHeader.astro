---
// src/components/Header.astro

const { description, sub_title1, sub_title2 } = Astro.props;
---

<div class="cockpit-header">
  <div class="header-bg"></div>
  <div class="header-content">
    <h1>
      <span class="title-dark">{sub_title1}</span>
      <br />
      <span class="title-gradient">{sub_title2}</span>
    </h1>
    <p class="header-description">
      {description}
    </p>
  </div>
</div>

<style>
  .cockpit-header {
    text-align: center;
    padding: 60px 20px 40px;
    position: relative;
    overflow: hidden;
  }

  .header-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(37, 99, 235, 0.1) 0%,
      rgba(96, 165, 250, 0.05) 100%
    );
    z-index: -1;
  }

  .header-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .header-content h1 {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    line-height: 1.2;
    margin-bottom: 20px;
  }

  .title-dark {
    color: #1f2937;
  }

  .title-gradient {
    background: linear-gradient(90deg, #2563eb, #60a5fa);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .header-description {
    color: #4b5563;
    font-size: 1.1rem;
    max-width: 700px;
    margin: 0 auto;
  }
</style>
