---
// src/components/AppDownload.astro
const {
  title,
  downloadText,
  googlePlayLink,
  appStoreLink,
  android_text_1,
  android_text_2,
  ios_text_1,
  ios_text_2,
} = Astro.props;
---

<section class="app-download">
  <div class="download-content">
    <h3 class="download-title">{title}</h3>
    <p class="download-text">{downloadText}</p>
    <div class="download-buttons">
      {
        googlePlayLink && (
          <a
            href={googlePlayLink}
            target="_blank"
            rel="noopener"
            class="download-btn google"
          >
            <div class="btn-icon">
              <svg
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  d="M3 20.5V3.5C3 2.91 3.34 2.39 3.84 2.15L13.69 12L3.84 21.85C3.34 21.61 3 21.09 3 20.5Z"
                  fill="currentColor"
                />
                <path
                  d="M16.81 15.12L6.05 21.34L14.54 12.85L16.81 15.12Z"
                  fill="currentColor"
                />
                <path
                  d="M20.16 10.81C20.5 11.08 20.75 11.5 20.75 12C20.75 12.5 20.5 12.92 20.16 13.19L17.89 14.5L15.39 12L17.89 9.5L20.16 10.81Z"
                  fill="currentColor"
                />
                <path
                  d="M6.05 2.66L16.81 8.88L14.54 11.15L6.05 2.66Z"
                  fill="currentColor"
                />
              </svg>
            </div>
            <div class="btn-content">
              <span class="btn-label">{android_text_1}</span>
              <span class="btn-store">{android_text_2}</span>
            </div>
          </a>
        )
      }
      {
        appStoreLink && (
          <a
            href={appStoreLink}
            target="_blank"
            rel="noopener"
            class="download-btn apple"
          >
            <div class="btn-icon">
              <svg
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  d="M18.71 19.5C17.88 20.74 17 21.95 15.66 21.97C14.32 22 13.89 21.18 12.37 21.18C10.84 21.18 10.37 21.95 9.1 22C7.79 22.05 6.8 20.68 5.96 19.47C4.25 17 2.94 12.45 4.7 9.39C5.57 7.87 7.13 6.91 8.82 6.88C10.1 6.86 11.32 7.75 12.11 7.75C12.89 7.75 14.37 6.68 15.92 6.84C16.57 6.87 18.39 7.1 19.56 8.82C19.47 8.88 17.39 10.18 17.41 12.63C17.44 15.65 20.06 16.66 20.09 16.67C20.06 16.74 19.67 18.11 18.71 19.5ZM13 3.5C13.73 2.67 14.94 2.04 15.94 2C16.07 3.17 15.6 4.35 14.9 5.19C14.21 6.04 13.07 6.7 11.95 6.61C11.8 5.46 12.36 4.26 13 3.5Z"
                  fill="currentColor"
                />
              </svg>
            </div>
            <div class="btn-content">
              <span class="btn-label">{ios_text_1}</span>
              <span class="btn-store">{ios_text_2}</span>
            </div>
          </a>
        )
      }
    </div>
  </div>
</section>

<style>
  .app-download {
    background: linear-gradient(135deg, var(--primary), var(--primary-light));
    color: white;
    border-radius: 16px;
    padding: 40px;
    margin: 60px 0;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .app-download::before,
  .app-download::after {
    content: "";
    position: absolute;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
  }

  .app-download::before {
    top: -50px;
    right: -50px;
    width: 200px;
    height: 200px;
  }

  .app-download::after {
    bottom: -80px;
    left: -80px;
    width: 250px;
    height: 250px;
  }

  .download-content {
    position: relative;
    z-index: 2;
    max-width: 600px;
    margin: 0 auto;
  }

  .download-title {
    font-size: 2rem;
    font-weight: 800;
    margin-bottom: 30px;
    margin-top: 0;
  }

  .download-text {
    margin-bottom: 40px;
    opacity: 0.9;
  }

  .download-buttons {
    display: flex;
    justify-content: center;
    gap: 20px;
    flex-wrap: wrap;
  }

  .download-btn {
    display: inline-flex;
    align-items: center;
    justify-content: flex-start;
    padding: 12px 20px;
    min-width: 200px;
    height: 64px;
    background: #000;
    color: white;
    text-decoration: none;
    border-radius: 12px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.1);
    position: relative;
    overflow: hidden;
  }

  .download-btn::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.1),
      transparent
    );
    transition: left 0.5s;
  }

  .download-btn:hover::before {
    left: 100%;
  }

  .download-btn.google {
    background: linear-gradient(135deg, #1e7e34, #28a745);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .download-btn.apple {
    background: linear-gradient(135deg, #1a1a1a, #333);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .download-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
  }

  .download-btn.google:hover {
    box-shadow: 0 8px 25px rgba(40, 167, 69, 0.4);
  }

  .download-btn.apple:hover {
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.5);
  }

  .btn-icon {
    flex-shrink: 0;
    margin-right: 12px;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .download-btn:hover .btn-icon {
    background: rgba(255, 255, 255, 0.2);
    transform: scale(1.1);
  }

  .btn-content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
  }

  .btn-label {
    font-size: 0.75rem;
    font-weight: 400;
    opacity: 0.8;
    line-height: 1;
    margin-bottom: 2px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .btn-store {
    font-size: 1.1rem;
    font-weight: 600;
    line-height: 1.2;
    color: white;
  }

  @media (max-width: 768px) {
    .app-download {
      padding: 30px 20px;
    }

    .download-buttons {
      flex-direction: column;
      align-items: center;
    }

    .download-btn {
      width: 100%;
      max-width: 280px;
      justify-content: center;
    }

    .btn-content {
      align-items: center;
      text-align: center;
    }
  }

  @media (max-width: 480px) {
    .download-btn {
      min-width: 240px;
      height: 60px;
      padding: 10px 16px;
    }

    .btn-icon {
      width: 28px;
      height: 28px;
      margin-right: 10px;
    }

    .btn-store {
      font-size: 1rem;
    }
  }
</style>
