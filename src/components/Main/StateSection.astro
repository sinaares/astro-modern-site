---
import Counter from "../Counter/Counter.astro";

interface Props {
  counters: {
    number: number;
    label: string;
  }[];
  title: string;
  subtitle: string;
}

const { counters, title, subtitle } = Astro.props;
---

<section style="text-align: center; padding: 2rem;">
  <h1 class="counter-title">{title}</h1>
  <h2 class="counter-subtitle">{subtitle}</h2>
  <div
    style="display: flex; gap: 6rem; justify-content: center; padding: 3rem; flex-wrap: wrap;"
  >
    {
      counters.map((counter) => (
        <Counter number={counter.number} label={counter.label} />
      ))
    }
  </div>
</section>

<style>
  .counter-title {
    font-size: 3rem; /* larger for strong section headline */
    font-weight: 800;
    line-height: 1.2;
    background: linear-gradient(45deg, #60a5fa, #34d399);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0.5rem;
    font-family: "Segoe UI", sans-serif;
  }

  .counter-subtitle {
    font-size: 1.5rem;
    font-weight: 500;
    color: #e0e0e0;
    font-family: "Segoe UI", sans-serif;
    opacity: 0.9;
    margin-top: 0;
  }
</style>
