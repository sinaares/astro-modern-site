---
// src/components/Benefits.astro

interface Props {
  title?: string;
  description?: string;
  benefits?: Array<{
    title: string;
    description: string;
  }>;
  dashboardStats?: Array<{
    label: string;
    value: number;
  }>;
}

const { title, description, benefits = [], dashboardStats = [] } = Astro.props;
---

<section class="benefits">
  <div class="benefits-container">
    <div class="benefits-content">
      <div class="benefits-text">
        <h2>{title}</h2>
        <p class="lead">{description}</p>

        <div class="benefit-points">
          {
            benefits.map((benefit, index) => (
              <div class="benefit-point">
                <span class="benefit-number">{index + 1}</span>
                <div class="benefit-content">
                  <h4>{benefit.title}</h4>
                  <p>{benefit.description}</p>
                </div>
              </div>
            ))
          }
        </div>
      </div>

      <div class="benefits-visual">
        <div class="visual-card dashboard">
          <div class="card-header">
            <div class="card-dots">
              <span></span>
              <span></span>
              <span></span>
            </div>
            <span class="card-title">Kontrol Paneli</span>
          </div>
          <div class="card-content">
            <div class="chart-placeholder">
              <div class="dashboard-content">
                <table class="stats-table">
                  {
                    dashboardStats.map((stat) => (
                      <tr>
                        <td>{stat.label}</td>
                        <td class="stat-value">{stat.value}</td>
                      </tr>
                    ))
                  }
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<style>
  .benefits {
    padding: 4rem 0;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }

  .benefits-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .benefits-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 3rem;
    align-items: center;
  }

  .benefits-text h2 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .benefits-text .lead {
    font-size: 1.25rem;
    opacity: 0.9;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .benefit-points {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .benefit-point {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1rem 0;
    border-left: 2px solid transparent;
    transition: all 0.3s ease;
  }

  .benefit-point:hover {
    border-left-color: #34d399;
    padding-left: 1rem;
  }

  .benefit-number {
    font-size: 1.5rem;
    font-weight: 700;
    color: #34d399;
    flex-shrink: 0;
    min-width: 2rem;
  }

  .benefit-content h4 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .benefit-content p {
    opacity: 0.85;
    line-height: 1.5;
    margin: 0;
  }

  .benefits-visual {
    display: flex;
    justify-content: center;
  }

  .visual-card {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 1rem;
    backdrop-filter: blur(10px);
    padding: 1.5rem;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    width: 100%;
    max-width: 300px;
  }

  .card-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1rem;
  }

  .card-dots {
    display: flex;
    gap: 4px;
  }

  .card-dots span {
    width: 8px;
    height: 8px;
    background: rgba(255, 255, 255, 0.7);
    border-radius: 50%;
  }

  .card-title {
    font-weight: 600;
    font-size: 0.9rem;
  }

  .chart-placeholder {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 0.5rem;
    padding: 1rem;
    min-height: 150px;
  }

  .dashboard-content {
    color: #c7d2fe;
    font-size: 0.9rem;
  }

  .stats-table {
    width: 100%;
    border-spacing: 0;
  }

  .stats-table td {
    padding: 0.75rem 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .stats-table tr:last-child td {
    border-bottom: none;
  }

  .stat-value {
    text-align: right;
    font-weight: 600;
    color: #34d399;
  }

  @media (max-width: 768px) {
    .benefits {
      padding: 4rem 0;
    }

    .benefits-content {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }

    .benefits-text h2 {
      font-size: 2rem;
    }

    .benefit-point {
      flex-direction: column;
      align-items: center;
      text-align: center;
      padding: 1rem;
    }

    .benefit-point:hover {
      border-left-color: transparent;
      padding-left: 1rem;
      background: rgba(255, 255, 255, 0.05);
      border-radius: 0.5rem;
    }
  }

  @media (max-width: 480px) {
    .benefits-container {
      padding: 0 1rem;
    }

    .benefits-text h2 {
      font-size: 1.75rem;
    }

    .benefits-text .lead {
      font-size: 1.1rem;
    }
  }
</style>
