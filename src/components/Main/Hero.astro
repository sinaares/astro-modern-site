---
const { title, highlight, subtitle, description } = Astro.props;
---

<section id="home" class="hero">
  <div class="hero-container">
    <div class="hero-content">
      <h1 class="hero-title">
        {title}<span class="highlight">{highlight}</span>
        {subtitle}
      </h1>
      <p class="hero-description">
        {description}
      </p>
      <div class="hero-buttons">
        <a href="../Features" class="btn btn-primary">Get Started</a>
        <a href="../Contact" class="btn btn-secondary">Learn More</a>
      </div>
    </div>

    <!-- Lottie animation for vehicle tracking -->
    <lottie-player
      src="https://assets1.lottiefiles.com/packages/lf20_49rdyysj.json"
      background="transparent"
      speed="1"
      style="width: 400px; height: 400px;"
      loop
      autoplay></lottie-player>
  </div>
</section>

<!-- Lottie script -->
<script
  src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"
></script>

<style>
  .hero {
    background: linear-gradient(
      135deg,
      #6d28d9 0%,
      #7c3aed 40%,
      #8b5cf6 70%,
      #9333ea 100%
    );
    min-height: 100vh;
    display: flex;
    align-items: center;
    color: white;
    position: relative;
    overflow: hidden;
  }

  .hero-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    position: relative;
    z-index: 1;
  }

  .hero-title {
    font-size: 3.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1.5rem;
  }

  .highlight {
    background: linear-gradient(90deg, #3b82f6, #60a5fa, #38bdf8);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-description {
    font-size: 1.25rem;
    margin-bottom: 2rem;
    opacity: 0.9;
    line-height: 1.7;
  }

  .hero-buttons {
    display: flex;
    gap: 1rem;
  }

  .btn {
    padding: 1rem 2rem;
    border: none;
    border-radius: 0.75rem;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    text-align: center;
  }

  .btn-primary {
    background: linear-gradient(90deg, #3b82f6, #60a5fa, #38bdf8);
    color: white;
    box-shadow: 0 8px 20px rgba(59, 130, 246, 0.35);
  }

  .btn-primary:hover {
    background: linear-gradient(90deg, #2563eb, #3b82f6, #0ea5e9);
    transform: translateY(-3px);
    box-shadow: 0 12px 30px rgba(59, 130, 246, 0.5);
  }

  .btn-secondary {
    background: transparent;
    color: white;
    border: 2px solid white;
  }

  .btn-secondary:hover {
    background: white;
    color: #6d28d9;
    transform: translateY(-3px);
  }

  @media (max-width: 768px) {
    .hero-container {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-title {
      font-size: 2.5rem;
    }

    .hero-buttons {
      justify-content: center;
      flex-wrap: wrap;
    }

    lottie-player {
      width: 250px !important;
      height: 250px !important;
      margin: 2rem auto 0 auto;
      display: block;
    }
  }
</style>
