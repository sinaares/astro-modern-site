---
const { mapLocation } = Astro.props;
---

<div class="contact-map">
  <iframe
    src={mapLocation}
    width="100%"
    height="100%"
    style="border:0;"
    allowfullscreen=""
    loading="lazy"
    referrerpolicy="no-referrer-when-downgrade"></iframe>
</div>

<style>
  .contact-map {
    width: 100%;
    height: 500px;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow:
      0 10px 15px -3px rgba(0, 0, 0, 0.1),
      0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }
  @media (max-width: 768px) {
    .contact-map {
      height: 300px;
    }
  }
</style>
