---
// Type definitions
import "../../styles/Contact/ContctInfo/StyleSheet.css";
interface ContactItem {
  type: string;
  value: string;
  icon: string;
}

// Props: fully customizable contact items
const { titleInfo, contactItems = [] } = Astro.props;
---

<div class="contact-info-card">
  <h3>{titleInfo}</h3>
  <ul class="contact-info">
    {
      contactItems.map((item: ContactItem) => (
        <li>
          {item.type === "email" ? (
            <a href={`mailto:${item.value}`}>
              <span class="icon">{item.icon}</span>
              <span>{item.value}</span>
            </a>
          ) : item.type === "phone" ? (
            <a href={`tel:${item.value}`}>
              <span class="icon">{item.icon}</span>
              <span>{item.value}</span>
            </a>
          ) : (
            <>
              <span class="icon">{item.icon}</span>
              <span>{item.value}</span>
            </>
          )}
        </li>
      ))
    }
  </ul>
</div>
