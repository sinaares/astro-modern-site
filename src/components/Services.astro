---
// src/components/Services/ServicesSection.astro
import ServiceCard from "./Services/ServiceCard.astro";
import SectionHeader from "./Services/ServicesHeader.astro";

export interface Props {
  services: Array<{
    href: string;
    icon: string;
    title: string;
    description: string;
    features: string[];
  }>;
}

const { services } = Astro.props;
---

<section id="services" class="services">
  <div class="services-container">
    <SectionHeader
      title="Hizmetlerimiz"
      description="İşletmeniz için kapsamlı dijital çözümler sunuyoruz"
    />

    <div class="services-grid">
      {services.map((service) => <ServiceCard {...service} />)}
    </div>
  </div>
</section>

<style>
  /* ========== Base Styles ========== */
  .services {
    padding: 8rem 0;
    background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
    position: relative;
    overflow: hidden;
  }

  .services-container {
    max-width: 1500px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 2;
  }

  /* ========== Services Grid Layout ========== */
  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2.5rem;
  }

  /* ========== Responsive Adjustments ========== */
  @media (max-width: 1200px) {
    .services-grid {
      gap: 2rem;
    }
  }

  @media (max-width: 1024px) {
    .services-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .services-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .services {
      padding: 6rem 0;
    }
  }

  @media (max-width: 480px) {
    .services-container {
      padding: 0 1.5rem;
    }
  }
</style>
