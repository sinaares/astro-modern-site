---
// components/SystemFeatures.astro
import VTSSFeaturesItem from "./VTSSFeaturesItem.astro";

export interface Feature {
  type: "feature-up" | "feature-down";
  title: string;
  description: string;
  icon: string; // SVG path string
}

export interface Props {
  features: Feature[];
  headerTitle?: string; // new optional prop
  headerSubtitle?: string; // new optional prop
}

const { features, headerTitle, headerSubtitle } = Astro.props;
---

<div class="features-section">
  <div class="features-header">
    <h3>{headerTitle}</h3>
    <p>{headerSubtitle}</p>
  </div>

  <div class="features-grid">
    {
      features.map((feature) => (
        <VTSSFeaturesItem
          title={feature.title}
          description={feature.description}
          icon={feature.icon}
        />
      ))
    }
  </div>
</div>
<style>
  .features-section {
    margin-top: 4rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 2rem;
    padding: 3rem 2rem;
    color: white;
    position: relative;
    overflow: hidden;
    margin-bottom: 4rem;
  }

  .features-section::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("data:image/svg+xml,%3Csvg width='40' height='40' viewBox='0 0 40 40' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Cpath d='M20 20c0 11.046-8.954 20-20 20s-20-8.954-20-20 8.954-20 20-20 20 8.954 20 20zm-10 0c0 5.523-4.477 10-10 10s-10-4.477-10-10 4.477-10 10-10 10 4.477 10 10z'/%3E%3C/g%3E%3C/svg%3E");
  }

  .features-header {
    text-align: center;
    margin-bottom: 3rem;
    position: relative;
    z-index: 1;
  }

  .features-header h3 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    margin-top: 0;
  }

  .features-header p {
    color: rgba(255, 255, 255, 0.8);
    font-size: 1.125rem;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    position: relative;
    z-index: 1;
  }

  @media (max-width: 1024px) {
    .features-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .features-section {
      padding: 2rem 1.5rem;
    }
  }
</style>
