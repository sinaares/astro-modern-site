---
// components/AppDownloadSection.astro
export interface Props {
  title?: string;
  subtitle?: string;
  features?: string[];
  playStoreLink?: string;
  playStoreBadgeSrc?: string;
  appStoreLink?: string;
  appStoreBadgeSrc?: string;
}

const {
  title,
  subtitle,
  features = [],
  playStoreLink,
  playStoreBadgeSrc,
  appStoreLink = "https://apps.apple.com/tr/app/tnb-filo/id6742660212?l=tr",
  appStoreBadgeSrc,
} = Astro.props;
---

<div class="app-section">
  <div class="app-content">
    <div class="app-text">
      <h3>{title}</h3>
      <p>{subtitle}</p>
      <ul class="app-features">
        {features.map((feature) => <li>âœ“ {feature}</li>)}
      </ul>
    </div>
    <div class="app-download">
      <div class="download-buttons">
        {
          playStoreLink && playStoreBadgeSrc && (
            <a
              href={playStoreLink}
              target="_blank"
              rel="noopener noreferrer"
              class="store-button"
            >
              <img
                src={playStoreBadgeSrc}
                alt="Google Play'den indirin"
                class="store-badge"
              />
            </a>
          )
        }
        {
          appStoreLink && appStoreBadgeSrc && (
            <a
              href={appStoreLink}
              target="_blank"
              rel="noopener noreferrer"
              class="store-button"
            >
              <img
                src={appStoreBadgeSrc}
                alt="App Store'dan indirin"
                class="store-badge"
              />
            </a>
          )
        }
      </div>
    </div>
  </div>
</div>

<style>
  .app-section {
    margin-top: 4rem;
    margin-bottom: 4rem;
    background: linear-gradient(135deg, #1a73e8 0%, #34a853 100%);
    border-radius: 2rem;
    padding: 3rem 2rem;
    color: white;
    position: relative;
    overflow: hidden;
  }

  .app-section::before {
    content: "";
    position: absolute;
    inset: 0;
    background: url("data:image/svg+xml,%3Csvg width='40' height='40' viewBox='0 0 40 40' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Cpath d='M20 20c0 11.046-8.954 20-20 20s-20-8.954-20-20 8.954-20 20-20 20 8.954 20 20zm-10 0c0 5.523-4.477 10-10 10s-10-4.477-10-10 4.477-10 10-10 10 4.477 10 10z'/%3E%3C/g%3E%3C/svg%3E");
    z-index: 0;
  }

  .app-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 3rem;
    align-items: center;
    position: relative;
    z-index: 1;
  }

  .app-text h3 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    line-height: 1.2;
    margin-top: 0;
  }

  .app-text p {
    font-size: 1.125rem;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.7;
    margin-bottom: 2rem;
  }

  .app-features {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .app-features li {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 0.75rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .app-download {
    text-align: center;
  }

  .download-buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
  }

  .store-button {
    display: inline-block;
    transition: all 0.3s ease;
    width: 200px;
    height: 60px;
    border-radius: 12px;
    padding: 0;
  }

  .store-button:hover {
    transform: translateY(-4px) scale(1.05);
  }

  .store-badge {
    height: 60px;
    width: 200px;
    object-fit: cover;
    border-radius: 12px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
  }

  /* Removed responsive row layout - buttons always stack vertically */

  @media (max-width: 1024px) {
    .app-content {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }
  }

  @media (max-width: 768px) {
    .app-section {
      padding: 2rem 1.5rem;
    }

    .app-text h3 {
      font-size: 2rem;
    }
  }

  @media (max-width: 640px) {
    .app-text h3 {
      font-size: 1.75rem;
    }

    .store-button {
      width: 180px;
      height: 54px;
    }

    .store-badge {
      height: 54px;
      width: 180px;
    }

    .download-buttons {
      gap: 1rem;
    }
  }
</style>
