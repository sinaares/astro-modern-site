---
// src/components/FloatingShapes.astro
---

<div class="floating-shapes">
  <div class="shape shape-1"></div>
  <div class="shape shape-2"></div>
  <div class="shape shape-3"></div>
  <div class="shape shape-4"></div>
  <div class="shape shape-5"></div>
</div>

<style>
  .floating-shapes {
    position: absolute;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
    overflow: hidden;
  }

  .shape {
    position: absolute;
    animation: float 15s infinite ease-in-out;
    opacity: 0.8;
  }

  /* Circle */
  .shape-1 {
    width: 250px;
    height: 250px;
    top: 15%;
    left: -125px;
    border-radius: 50%;
    background: linear-gradient(
      45deg,
      rgba(167, 139, 250, 0.1),
      rgba(139, 92, 246, 0.15)
    );
    animation-delay: 0s;
  }

  /* Triangle */
  .shape-2 {
    width: 0;
    height: 0;
    top: 65%;
    right: -100px;
    border-left: 100px solid transparent;
    border-right: 100px solid transparent;
    border-bottom: 180px solid rgba(96, 165, 250, 0.1);
    animation-delay: -3s;
  }

  /* Square with rotation */
  .shape-3 {
    width: 150px;
    height: 150px;
    bottom: 25%;
    left: 20%;
    background: linear-gradient(
      135deg,
      rgba(236, 72, 153, 0.1),
      rgba(219, 39, 119, 0.1)
    );
    animation-delay: -6s;
    animation-name: float-rotate;
  }

  /* Blob shape */
  .shape-4 {
    width: 180px;
    height: 180px;
    top: 30%;
    right: 15%;
    background: rgba(16, 185, 129, 0.1);
    border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
    animation-delay: -9s;
    animation-name: float-pulse;
  }

  /* Hexagon */
  .shape-5 {
    width: 120px;
    height: 207px;
    bottom: -50px;
    left: 50%;
    background: rgba(245, 158, 11, 0.1);
    clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
    animation-delay: -12s;
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0) translateX(0);
    }
    25% {
      transform: translateY(-40px) translateX(20px);
    }
    50% {
      transform: translateY(20px) translateX(-10px);
    }
    75% {
      transform: translateY(-20px) translateX(-20px);
    }
  }

  @keyframes float-rotate {
    0%,
    100% {
      transform: translateY(0) rotate(0deg);
    }
    25% {
      transform: translateY(-30px) rotate(5deg);
    }
    50% {
      transform: translateY(20px) rotate(-5deg);
    }
    75% {
      transform: translateY(-10px) rotate(10deg);
    }
  }

  @keyframes float-pulse {
    0%,
    100% {
      transform: translateY(0) scale(1);
    }
    50% {
      transform: translateY(-30px) scale(1.1);
    }
  }
</style>

<script>
  // Enhanced parallax effect
  window.addEventListener("scroll", () => {
    const scrolled = window.pageYOffset;
    const shapes = document.querySelectorAll(".shape");

    shapes.forEach((shape, index) => {
      const element = shape as HTMLElement;
      const speed = [0.3, 0.5, 0.7, 0.4, 0.6][index % 5];
      const xOffset = index % 2 === 0 ? speed * 0.5 : -speed * 0.5;
      element.style.transform = `translateY(${scrolled * speed}px) translateX(${scrolled * xOffset}px)`;
    });
  });
</script>
