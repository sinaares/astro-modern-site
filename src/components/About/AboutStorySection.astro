---
// src/components/StorySection.astro
export interface Props {
  title?: string;
  storyText: string[];
  highlights: Array<{
    title: string;
    description: string;
  }>;
}

const { title = "Hikayemiz", storyText, highlights } = Astro.props;
---

<div class="story-section">
  <div>
    <h3 class="story-title">{title}</h3>
    <div class="story-grid">
      <div class="story-text">
        {storyText.map((paragraph) => <p>{paragraph}</p>)}
      </div>
      <div class="story-highlights">
        {
          highlights.map((highlight) => (
            <div class="highlight-item">
              <h4>{highlight.title}</h4>
              <p>{highlight.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</div>

<style>
  .story-section {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(0, 0, 0, 0.05);
    border-radius: 24px;
    padding: 50px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    grid-column: 1 / -1;
  }

  .story-title {
    font-size: 2.5rem;
    font-weight: 800;
    color: #1f2937;
    text-align: center;
    margin-bottom: 40px;
    position: relative;
  }

  .story-title::after {
    content: "";
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 3px;
    background: linear-gradient(90deg, #2563eb, #60a5fa);
    border-radius: 2px;
  }

  .story-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 50px;
    align-items: start;
  }

  .story-text p {
    font-size: 1.1rem;
    color: #4b5563;
    line-height: 1.7;
    margin-bottom: 20px;
  }

  .story-highlights {
    display: flex;
    flex-direction: column;
    gap: 25px;
  }

  .highlight-item {
    background: rgba(37, 99, 235, 0.05);
    border-radius: 16px;
    padding: 25px;
    border: 1px solid rgba(37, 99, 235, 0.1);
    transition: all 0.3s ease;
  }

  .highlight-item:hover {
    background: rgba(37, 99, 235, 0.08);
    transform: translateX(10px);
    box-shadow: 0 4px 12px rgba(37, 99, 235, 0.1);
  }

  .highlight-item h4 {
    font-size: 1.3rem;
    font-weight: 700;
    color: #2563eb;
    margin: 0 0 10px 0;
  }

  .highlight-item p {
    font-size: 1rem;
    color: #6b7280;
    margin: 0;
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    .story-section {
      padding: 35px 25px;
    }

    .story-grid {
      grid-template-columns: 1fr;
      gap: 35px;
    }
  }

  @media (max-width: 480px) {
    .story-section {
      padding: 30px 20px;
    }
  }
</style>
