---
// src/components/HeroSection.astro
import "../../styles/About/AboutHero/StyleSheet.css";
export interface Props {
  subtitle?: string;
  title?: string; // Changed from string[] to string
  description?: string;
}

const { subtitle, title = "", description } = Astro.props;

// Split the title into words and highlight the second word by default
const words = title.split(" ");
const highlightIndex = 1; // Default to highlighting the second word
---

<div class="hero-section">
  <div class="hero-content">
    <div class="title-wrapper">
      <h1 class="about-heading">
        {
          words.map((word, index) => (
            <span
              class={`heading-word ${index === highlightIndex ? "highlight" : ""}`}
            >
              {word}
              {index < words.length - 1 ? " " : ""}
            </span>
          ))
        }
      </h1>
    </div>
    <p class="hero-description">
      {description}
    </p>
  </div>
</div>
