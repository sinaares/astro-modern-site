---
// FleetManagement.astro
import FleetHero from "./ServicComponents/FleetHero.astro";
import OverviewCard from "./ServicComponents/OverviewCard.astro";
import FeaturesServicesGrid from "./ServicComponents/FeaturesServicesGrid.astro";
import SecuritySection from "./ServicComponents/SecuritySection.astro";
import BenefitsSection from "./ServicComponents/BenefitsSection.astro";
import FloatingShapes from "./ServicComponents/FloatingShapes.astro";

const {
  hero_subtitle,
  hero_title1,
  hero_title2,
  hero_description,
  overview_title,
  overview_path,
  overview_description,
  features_title,
  features_list = [],
  security_title,
  security_description,
  security_features = [],
  security_path,
  benefits_title,
  benefits_list = [],
} = Astro.props;
---

<section class="fleet-section">
  <FloatingShapes />

  <FleetHero
    subtitle={hero_subtitle}
    title1={hero_title1}
    title2={hero_title2}
    description={hero_description}
  />

  <div class="content-section">
    <div class="content-container">
      <OverviewCard
        title={overview_title}
        path={overview_path}
        description={overview_description}
      />

      <FeaturesServicesGrid title={features_title} features={features_list} />

      <SecuritySection
        title={security_title}
        description={security_description}
        features={security_features}
        path={security_path}
      />

      <BenefitsSection title={benefits_title} benefits={benefits_list} />
    </div>
  </div>
</section>

<style>
  .fleet-section {
    position: relative;
    min-height: 100vh;
    background: linear-gradient(180deg, #f8fafc 0%, #ffffff 50%, #e2e8f0 100%);
    overflow: hidden;
  }

  .content-section {
    position: relative;
    z-index: 2;
    padding: 60px 20px;
  }

  .content-container {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    gap: 50px;
  }

  @media (max-width: 768px) {
    .content-container {
      gap: 30px;
    }
  }
</style>
