---
// components/SecuritySection.astro
import "../../styles/ServicesComponents/SecuritySection/StyleSheet.css";
export interface SecurityFeature {
  icon: string;
  label: string;
}

export interface Props {
  title?: string;
  description?: string;
  features?: SecurityFeature[];
  path?: string;
}

const { title, description, features = [], path } = Astro.props;
---

<div class="security-section">
  <div class="security-content">
    <div class="security-text">
      <h3>{title}</h3>
      <p>{description}</p>
      <div class="security-features">
        {
          features.map(({ icon, label }) => (
            <div class="security-item">
              <span class="security-icon">{icon}</span>
              <span>{label}</span>
            </div>
          ))
        }
      </div>
    </div>
    <div class="security-visual">
      <div class="security-badge" role="img" aria-label="Security Badge">
        <svg
          width="80"
          height="80"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d={path}></path>
        </svg>
      </div>
    </div>
  </div>
</div>
