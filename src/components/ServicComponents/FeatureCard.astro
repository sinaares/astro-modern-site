---
const { icon, title, description } = Astro.props;
---

<div class="feature-card">
  <div class="feature-icon">
    <svg
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
    >
      <path d={icon}></path>
    </svg>
  </div>
  <h4>{title}</h4>
  <p>{description}</p>
</div>

<style>
  .feature-card {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(0, 0, 0, 0.05);
    border-radius: 20px;
    padding: 35px;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
  }

  .feature-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 25px rgba(0, 0, 0, 0.1);
    background: rgba(255, 255, 255, 0.95);
  }

  .feature-icon {
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, #3b82f6, #10b981);
    border-radius: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    margin-bottom: 20px;
  }

  .feature-card h4 {
    font-size: 1.4rem;
    font-weight: 700;
    color: #1f2937;
    margin: 0 0 15px 0;
  }

  .feature-card p {
    font-size: 1.1rem;
    color: #6b7280;
    line-height: 1.6;
    margin: 0;
  }
</style>
