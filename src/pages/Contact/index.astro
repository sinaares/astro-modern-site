---
import Layout, { phone, email } from "../../layouts/Layout.astro";
import Contact from "../../components/contact.astro";

const contactItems = [
  { type: "email", value: email, icon: "✉️" },
  { type: "phone", value: phone, icon: "📱" },
  { type: "location", value: "New York, USA", icon: "📍" },
];
---

<Layout title="Contact Us | Technical Solutions">
  <Contact
    titleHeader="Get in Touch"
    lead="Fill out the contact form or reach us directly using the information below. Our team will get back to you as soon as possible."
    email="support@example.com"
    titleInfo="Our Contact Information"
    phone="+1 555 123 4567"
    location="New York, USA"
    mapLocation="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3021.860179916676!2d-73.97124818459388!3d40.78306037932461!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c2588f181d9e29%3A0xbbb0f65f0c356c3!2sCentral%20Park!5e0!3m2!1sen!2sus!4v1754472324003!5m2!1sen!2sus"
    titleForm="Frequently Asked Questions"
    questionSection={[
      {
        question: "How can I get information about your services?",
        answer:
          "You can visit our website or contact us directly. We’ll be happy to provide detailed information tailored to your needs.",
      },
      {
        question: "How does pricing work?",
        answer:
          "Pricing depends on the scope of each project. Contact us for a free evaluation.",
      },
      {
        question: "Do you provide support services?",
        answer:
          "Yes, we offer 24/7 technical support. You can reach us anytime if you need assistance.",
      },
      {
        question: "How long does it take to complete a project?",
        answer:
          "Project duration depends on complexity and scope. Most projects are completed within 2–8 weeks.",
      },
    ]}
    contactItems={contactItems}
  />
</Layout>
