import Layout from "../../layouts/Layout.astro";
import Features from "../../components/Features.astro";
---

<Layout title="Technical Support | Advantages">
  <Features
    title_header="Why Choose Technical Support Services?"
    description_header="Key advantages of professional technical support solutions for your business"
    features={[
      {
        icon: "🛠️",
        title: "Fast Issue Resolution",
        description:
          "Technical teams quickly detect and resolve system or device malfunctions, minimizing downtime.",
        link: "#fast-repair-details",
      },
      {
        icon: "📊",
        title: "Performance Reporting",
        description:
          "Operational data is analyzed and presented as detailed reports to improve decision-making.",
        link: "#performance-report-details",
      },
      {
        icon: "⚙️",
        title: "Maintenance & Optimization",
        description:
          "Regular maintenance and system optimization ensure reliable and efficient performance.",
        link: "#maintenance-details",
      },
      {
        icon: "🔐",
        title: "Security & Data Protection",
        description:
          "Robust encryption, access control, and secure infrastructure protect your critical information.",
        link: "#security-details",
      },
      {
        icon: "📡",
        title: "Real-Time Monitoring",
        description:
          "Systems and equipment are continuously monitored to enable proactive management and rapid response.",
        link: "#monitoring-details",
      },
      {
        icon: "🤝",
        title: "Expert Support Team",
        description:
          "A dedicated team of professionals is always available to provide guidance, troubleshooting, and solutions tailored to your needs.",
        link: "#expert-team-details",
      },
    ]}
    features_text_icon="M5 12h14M12 5l7 7-7 7"
    features_text="View Details"
    details={[
      {
        id: "fast-repair-details",
        icon: "🛠️",
        title: "Fast Issue Resolution",
        content: [
          "Immediate detection and repair of issues reduces operational downtime.",
          "Automated alerts ensure that technical problems are addressed as soon as they arise.",
          "Support teams work both remotely and on-site to guarantee uninterrupted operations.",
        ],
        link: "#fast-repair-details",
      },
      {
        id: "performance-report-details",
        icon: "📊",
        title: "Performance Reporting",
        content: [
          "Customizable dashboards give you instant insights into system health and usage.",
          "Reports are available in multiple formats (PDF, Excel) for easy sharing and record keeping.",
          "Advanced analytics highlight trends and performance metrics to support decision-making.",
        ],
        link: "#performance-report-details",
      },
      {
        id: "maintenance-details",
        icon: "⚙️",
        title: "Maintenance & Optimization",
        content: [
          "Scheduled maintenance reduces the risk of unexpected failures.",
          "System optimization ensures maximum performance and cost efficiency.",
          "Predictive tools help plan upgrades and prevent potential problems before they occur.",
        ],
        link: "#maintenance-details",
      },
      {
        id: "security-details",
        icon: "🔐",
        title: "Security & Data Protection",
        content: [
          "End-to-end data encryption and secure servers keep sensitive data safe.",
          "Multi-factor authentication prevents unauthorized access.",
          "Compliance with international standards (ISO, GDPR) guarantees trusted protection.",
        ],
        link: "#security-details",
      },
      {
        id: "monitoring-details",
        icon: "📡",
        title: "Real-Time Monitoring",
        content: [
          "Live system status updates provide instant visibility into operations.",
          "Automated alerts notify teams when thresholds are exceeded.",
          "Historical data and logs support predictive analysis and long-term planning.",
        ],
        link: "#monitoring-details",
      },
      {
        id: "expert-team-details",
        icon: "🤝",
        title: "Expert Support Team",
        content: [
          "Certified experts deliver quick, effective, and tailored solutions.",
          "24/7 availability ensures constant support whenever issues arise.",
