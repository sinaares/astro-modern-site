---
import Layout from "../../layouts/Layout.astro";
import Kokpit from "../../components/Kokpit.astro";
---

<Layout title="Kokpit">
  <Kokpit
    header_description="TNB Mobil Kokpit ile işletmenizin tüm dijital ihtiyaçlarını tek bir platformdan yönetin. Araç takibinden personel yönetimine, filo kontrolünden yakıt takibine kadar her şey elinizin altında."
    header_sub_title1="İşletmeniz için"
    header_sub_title2="Dijital Çözümler"
    cards={[
      {
        title: "Araç Takip Sistemi",
        icon: "🚗",
        href: "/VehicleTrackingSystem",
        description:
          "Filonuzdaki her aracı canlı olarak harita üzerinden izleyebilirsiniz. Konum, hız, yön ve geçmiş sürüş verileri anlık olarak sunulur.",
        features: [
          { icon: "📍", text: "Gerçek zamanlı konum takibi" },
          { icon: "🚦", text: "Hız ve rota kontrolü" },
          { icon: "🛡️", text: "Güvenli bölge tanımlama" },
          { icon: "⚠️", text: "Anlık uyarı sistemi" },
        ],
      },
      {
        title: "Personel ve İK Yönetimi",
        icon: "👥",
        href: "/PersonelSystem",
        description:
          "TNB Mobil'in İnsan Kaynakları Yönetim Sistemi, çalışanların işe alım, bordro, performans ve eğitim süreçlerini tek platformda yönetmenizi sağlar.",
        features: [
          { icon: "📁", text: "Kapsamlı personel bilgi ve özlük dosyaları" },
          { icon: "💰", text: "Otomatik bordro ve maaş hesaplamaları" },
          { icon: "📊", text: "360° performans değerlendirme sistemi" },
          { icon: "📱", text: "Mobil ve bulut tabanlı erişim imkanı" },
        ],
      },
      {
        title: "Filo Yönetim Sistemi",
        icon: "🚛",
        href: "/FleetManagement",
        description:
          "İşletmenize ait tüm araçların yaşam döngüsünü uçtan uca takip etmenize olanak tanır. Bakım planlaması, muayene tarihleri ve sözleşme yönetimi tek panelde.",
        features: [
          { icon: "🔧", text: "Bakım ve servis takibi" },
          { icon: "⏰", text: "Sigorta ve muayene hatırlatıcıları" },
          { icon: "📈", text: "Maliyet analizi" },
          { icon: "📋", text: "Kapsamlı raporlama" },
        ],
      },
      {
        title: "PDKS ve Erişim Sistemleri",
        icon: "👤",
        href: "/PDKS",
        description:
          "Personel Devam Kontrol Sistemi ve erişim çözümleri, çalışanların iş yerindeki giriş-çıkışlarını biyometrik cihazlar aracılığıyla izler.",
        features: [
          { icon: "👆", text: "Biyometrik giriş-çıkış kontrolü" },
          { icon: "⏱️", text: "Otomatik mesai hesaplama" },
          { icon: "🔐", text: "Güvenli erişim yönetimi" },
          { icon: "📑", text: "Detaylı personel raporları" },
        ],
      },
      {
        title: "Sürüş Performans Sistemi",
        icon: "📊",
        href: "/SDS",
        description:
          "Araçlara entegre edilen cihazlar ile hız, konum ve G-sensör verileri toplanır. Sürücü davranışları analiz edilerek güvenli ve verimli sürüş teşvik edilir.",
        features: [
          { icon: "📡", text: "Gerçek zamanlı veri analizi" },
          { icon: "🚗", text: "Hız, frenleme ve dönüş değerlendirmesi" },
          { icon: "⭐", text: "Sürücü bazlı performans puanlama" },
          { icon: "📋", text: "Özelleştirilebilir raporlar" },
        ],
      },
      {
        title: "Yakıt Yönetim Sistemi",
        icon: "⛽",
        href: "/FuelManagement",
        description:
          "Yakıt tüketimini detaylı şekilde izleyerek gereksiz harcamaları önleyin. Araç bazlı tüketim analizleriyle maliyet kontrolü sağlar.",
        features: [
          { icon: "⏱️", text: "Gerçek zamanlı yakıt tüketim takibi" },
          { icon: "⛽", text: "Yakıt dolum ve harcama kayıtları" },
          { icon: "📊", text: "Araç bazlı yakıt verimliliği analizi" },
          { icon: "💰", text: "Maliyet optimizasyonu ve raporlama" },
        ],
      },
    ]}
    appDownload_title="TNB Mobil Kokpit Uygulamasını İndirin"
    appDownload_text="İşletmenizin tüm dijital ihtiyaçlarını tek bir uygulamadan yönetmek için hemen indirin. Android cihazlarınızda TNB Mobil Kokpit deneyimini yaşayın."
    appDownload_link_android="https://play.google.com/store/apps/details?id=com.tnbmobil.kokpit.twa"
    appDownload_link_ios="https://apps.apple.com/tr/app/kokpit-tnb-mobil/id1635144353?l=tr"
    android_text_1="ŞİMDİ İNDİRİN"
    android_text_2="Google Play"
    ios_text_1="İNDİRİN"
    ios_text_2="App Store"
  />
</Layout>
